    <a href="<?php echo url($urlReal."/".$nn->id); ?>">
        <?php if(file_exists($nn->anhnho)): ?>
        <?php echo HTML::image($nn->anhnho, '', array('class' => 'pull-left', 'style' => 'margin-right: 10px')); ?>
        <?php else: ?>
        <?php echo HTML::image('img/no_thumb.jpg', '', array('class' => 'pull-left', 'style' => 'margin-right: 10px')); ?>
        <?php endif; ?>
    </a>
    <p><a href="<?php echo url($urlReal."/".$nn->id); ?>"><?php echo HTML::decode($nn->tieude); ?></a></p>
    <p>Thời gian đăng:&nbsp;<?php echo date("h:i A | d/m/Y",strtotime($nn->thoidiemsua)); ?></p>
    <p>Lượt xem:&nbsp;<?php echo $nn->luotxem; ?></p>
    <p><a href="<?php echo url($urlReal."/".$nn->id); ?>">[...Xem thêm]</a></p>
</div>
<hr>
<?php endif; ?>
<?php endforeach; ?>
<div id='tin_nn_paging'>
    <?php echo $newsNNs->links(); ?>
