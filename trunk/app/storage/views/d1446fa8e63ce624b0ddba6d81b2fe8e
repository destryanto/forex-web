        <?php else: ?>
        <?php echo HTML::image('img/no_thumb.jpg', '', array('class' => 'pull-left', 'style' => 'margin-right: 10px')); ?>
        <?php endif; ?>
    </a>
    <p><h4><a href="<?php echo url($urlReal."/".$hh->id); ?>"><?php echo HTML::decode($hh->tieude); ?></a></h4></p>
