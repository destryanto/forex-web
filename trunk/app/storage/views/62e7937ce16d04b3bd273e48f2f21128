<?php
$url = new FunctionController();
$count = 0;
?>
<div class="panel panel-success">
    <div class="panel-heading"><h3><span class="glyphicon glyphicon-book"></span>&nbsp;Bài mới đăng</h3></div>
    <div class="panel-body" id="baivietmoi_index">
        <?php foreach($newthreads as $thread): ?>
        <?php if ($thread != null): ?>
        <?php
        $urlReal = $url->getURL($thread->loai);
        $count++;
        ?>
        <div>   <?php if($url->isUnexpected($thread->loai)): ?>
            <a href="<?php echo url($urlReal."/threads=".$thread->id); ?>" target="_blank"><span class="glyphicon glyphicon-hand-right"></span>&nbsp;<?php echo $thread->tieude; ?></a>
            <?php else: ?>
            <a href="<?php echo url($urlReal."/".$thread->id); ?>" target="_blank"><span class="glyphicon glyphicon-hand-right"></span>&nbsp;<?php echo $thread->tieude; ?></a>
            <?php endif; ?>
        </div>
        <hr>
        <?php endif; ?>
        <?php endforeach; ?>
        <div id='baivietmoi_paging' style="text-align: center">
            <?php echo $newthreads->links(); ?>
        </div>
        <style type='text/css'>
            .pagination
            {
                margin: 0px;
                margin-left: -20px;
            }
            .pagination li {
                display: inline;
                margin-left: 0.3em;
                margin-right: 0.3em;
            }
        </style>
        <?php if($count == 0): ?>
        <div>  
            Không có bài viết liên quan nào.
        </div>
        <hr>
        <?php endif; ?>
    </div>
</div>